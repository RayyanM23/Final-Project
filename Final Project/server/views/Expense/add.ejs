<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>
                <%= title %>
            </h1>
            <a href="/expenseList" class="btn btn-primary" role="button">
                < Back </a>
                    <form class="form" method="POST">
                        <div class="form-group">
                            <label for="typeSelect">Type</label>
                            <select class="form-control" id="typeSelect" name="Type" required>
                                <option value="">Select Type</option>
                                <option value="Income">Income</option>
                                <option value="Expense">Expense</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="categoryTextField">Category</label>
                            <input type="text" class="form-control" id="categoryTextField" placeholder="Enter the Category" name="Category" required>
                        </div>
                        <div class="form-group">
                            <label for="detailsTextArea">Details</label>
                            <textarea type="text" class="form-control" id="detailsTextArea" placeholder="Enter the Details" name="Details" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="amountTextField">Amount</label>
                            <input type="text" class="form-control" id="amountTextField" placeholder="Amount" name="Amount" required>
                        </div>
                        <button class="btn btn-primary" type="submit">Submit
                    <i class="fas fa-edit"></i></button>
                        <button class="btn btn-warning" type="reset">Cancel
                    <i class="fas fa-undo"></i></button>
                    </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>